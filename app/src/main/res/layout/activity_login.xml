<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="25dp"
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/styled_map_logo" />

            <TextView
                android:id="@+id/gourmet_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center_horizontal"
                android:text="Styled Map"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:textStyle="bold|italic" />
            <LinearLayout
                android:id="@+id/p_login"
                android:layout_below="@+id/gourmet_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:orientation="vertical"

                android:padding="5dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/p_login_phone_cover1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Enter the phone Number"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:startIconTint="@color/colorPrimaryDark"
                    app:endIconTint="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/p_login_phone1"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:importantForAutofill="no"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/p_login_pass_cover"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Enter your password"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/colorPrimary"
                    app:startIconDrawable="@drawable/ic_lock_outline_black_24dp"
                    app:endIconTint="@color/colorPrimaryDark"
                    app:startIconTint="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/p_login_pass"
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/p_login_button_scanner"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="12sp"
                        android:text="Scan "
                        android:padding="10dp"
                        android:layout_marginEnd="1dp"
                        android:textColor="@color/colorPrimaryDark"
                        app:backgroundTint="@color/white"
                        app:icon="@drawable/ic_center_focus_strong_black_24dp"
                        app:iconTint="@color/colorPrimaryDark" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/p_login_button_recharge"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="1dp"
                        android:textSize="12sp"
                        android:text="Recharge"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        app:backgroundTint="@color/white"
                        app:icon="@drawable/ic_attach_money_black_24dp"
                        app:iconTint="@color/colorPrimaryDark" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/p_login_otp_cover"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Enter OTP"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:endIconMode="clear_text"
                    app:hintTextColor="@color/colorPrimary"
                    app:startIconDrawable="@drawable/ic_lock_outline_black_24dp"
                    app:endIconTint="@color/colorPrimaryDark"
                    app:startIconTint="@color/colorPrimaryDark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/p_login_otp"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/p_login_otp_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:text="Verify OTP"
                    android:padding="10dp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/colorPrimaryDark"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_center_focus_strong_black_24dp"
                    app:iconTint="@color/colorPrimaryDark" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>